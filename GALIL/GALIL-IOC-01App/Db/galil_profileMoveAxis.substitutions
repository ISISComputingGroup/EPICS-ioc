# Profile axes
#
# P    - PV prefix
# R    - Record Name
# M    - Motor number 1-8
# NPOINTS - Number of profile points
# NREADBACK - Number of readback points
# MOTOR - Motor PV name

file "$(MOTOR)/db/profileMoveAxis.template"
{
pattern
{P,       R,      M,  PORT,     ADDR, NPOINTS,   NREADBACK,  MOTOR,    PREC,    TIMEOUT}
{\$(P),  Prof1:, 1,  Galil,    0,    1441,       1441,      \$(P)A,  4,       1}
{\$(P),  Prof1:, 2,  Galil,    1,    1441,       1441,      \$(P)B,  4,       1}
{\$(P),  Prof1:, 3,  Galil,    2,    1441,       1441,      \$(P)C,  4,       1}
{\$(P),  Prof1:, 4,  Galil,    3,    1441,       1441,      \$(P)D,  4,       1}
{\$(P),  Prof1:, 5,  Galil,    4,    1441,       1441,      \$(P)E,  4,       1}
{\$(P),  Prof1:, 6,  Galil,    5,    1441,       1441,      \$(P)F,  4,       1}
{\$(P),  Prof1:, 7,  Galil,    6,    1441,       1441,      \$(P)G,  4,       1}
{\$(P),  Prof1:, 8,  Galil,    7,    1441,       1441,      \$(P)H,  4,       1}

#CSAxis
{\$(P),  Prof1:, 9,  Galil,    8,    1441,       1441,      \$(P)I,  4,       1}
{\$(P),  Prof1:, 10, Galil,    9,    1441,       1441,      \$(P)J,  4,       1}
{\$(P),  Prof1:, 11, Galil,    10,   1441,       1441,      \$(P)K,  4,       1}
{\$(P),  Prof1:, 12, Galil,    11,   1441,       1441,      \$(P)L,  4,       1}
{\$(P),  Prof1:, 13, Galil,    12,   1441,       1441,      \$(P)M,  4,       1}
{\$(P),  Prof1:, 14, Galil,    13,   1441,       1441,      \$(P)N,  4,       1}
{\$(P),  Prof1:, 15, Galil,    14,   1441,       1441,      \$(P)O,  4,       1}
{\$(P),  Prof1:, 16, Galil,    15,   1441,       1441,      \$(P)P,  4,       1}
}

