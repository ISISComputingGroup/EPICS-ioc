# P    - PV prefix
# R    - Record Name
# PORT - Asyn port name
# BYTE - Hardware byte to read
# MASK - Mask for this bit

# Digital IO naming
# $(P)$(R)<Byte or word num><Type Bo or Bi><Bit>

file "$(GALIL)/GalilSup/Db/galil_digital_in_bit.template"
{
pattern {P,       R,          PORT,  BYTE,  MASK,     ZNAM,  ONAM,  ZSV,        OSV         }

# DMC = Digital motor controller
# DMC binary inputs are organized in bytes
	{\$(P)DMC\$(CCP):,  Galil0Bi0,  Galil, 0,     0x000001, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bi1,  Galil, 0,     0x000002, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bi2,  Galil, 0,     0x000004, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bi3,  Galil, 0,     0x000008, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bi4,  Galil, 0,     0x000010, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bi5,  Galil, 0,     0x000020, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bi6,  Galil, 0,     0x000040, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bi7,  Galil, 0,     0x000080, "Off", "On",  "NO_ALARM", "NO_ALARM"  }

	{\$(P)DMC\$(CCP):,  Galil1Bi0,  Galil, 1,     0x000001, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bi1,  Galil, 1,     0x000002, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bi2,  Galil, 1,     0x000004, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bi3,  Galil, 1,     0x000008, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bi4,  Galil, 1,     0x000010, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bi5,  Galil, 1,     0x000020, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bi6,  Galil, 1,     0x000040, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bi7,  Galil, 1,     0x000080, "Off", "On",  "NO_ALARM", "NO_ALARM"  }

	{\$(P)DMC\$(CCP):,  Galil2Bi0,  Galil, 2,     0x000001, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil2Bi1,  Galil, 2,     0x000002, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil2Bi2,  Galil, 2,     0x000004, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil2Bi3,  Galil, 2,     0x000008, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil2Bi4,  Galil, 2,     0x000010, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil2Bi5,  Galil, 2,     0x000020, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil2Bi6,  Galil, 2,     0x000040, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil2Bi7,  Galil, 2,     0x000080, "Off", "On",  "NO_ALARM", "NO_ALARM"  }

}

# P    - PV prefix
# R    - Record Name
# PORT - Asyn port name
# WORD - Hardware word to read
# MASK - Mask for this bit

file "$(GALIL)/GalilSup/Db/galil_digital_out_bit.template"
{
pattern {P,       R,           PORT,  WORD,  MASK,     ZNAM,  ONAM,  ZSV,        OSV         }

# DMC binary outputs are organized in 16bit words
	{\$(P)DMC\$(CCP):,  Galil0Bo0,   Galil, 0,     0x000001, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo1,   Galil, 0,     0x000002, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo2,   Galil, 0,     0x000004, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo3,   Galil, 0,     0x000008, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo4,   Galil, 0,     0x000010, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo5,   Galil, 0,     0x000020, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo6,   Galil, 0,     0x000040, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo7,   Galil, 0,     0x000080, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo8,   Galil, 0,     0x000100, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo9,   Galil, 0,     0x000200, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo10,  Galil, 0,     0x000400, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo11,  Galil, 0,     0x000800, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo12,  Galil, 0,     0x001000, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil0Bo13,  Galil, 0,     0x002000, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
