	{\$(P)DMC\$(CCP):,  Galil0Bo15,  Galil, 0,     0x008000, "Off", "On",  "NO_ALARM", "NO_ALARM"  }

	{\$(P)DMC\$(CCP):,  Galil1Bo0,   Galil, 1,     0x000001, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bo1,   Galil, 1,     0x000002, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bo2,   Galil, 1,     0x000004, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bo3,   Galil, 1,     0x000008, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bo4,   Galil, 1,     0x000010, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bo5,   Galil, 1,     0x000020, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bo6,   Galil, 1,     0x000040, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bo7,   Galil, 1,     0x000080, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bo8,   Galil, 1,     0x000100, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bo9,   Galil, 1,     0x000200, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bo10,  Galil, 1,     0x000400, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bo11,  Galil, 1,     0x000800, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
	{\$(P)DMC\$(CCP):,  Galil1Bo12,  Galil, 1,     0x001000, "Off", "On",  "NO_ALARM", "NO_ALARM"  }
