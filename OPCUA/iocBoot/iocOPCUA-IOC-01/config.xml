<?xml version="1.0" ?>
<ioc_config xmlns:xi="http://www.w3.org/2001/XInclude">
  <config_part>
    <ioc_desc>Omron OPCUA PLC</ioc_desc>
    <ioc_details>Driver to talk to opcua activated from settings.</ioc_details>
    <macros>
      <macro name="OPCUA_URI" pattern="^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$" description="URI of OPCUA Server PLC" hasDefault="NO" />
      <macro name="PLCNODE" pattern="^$|^([0-9]|[1-9][0-9]|1[0-9][0-9]|2[0-4][0-9]|25[0-5])$" description="Node of PLC" defaultValue="" hasDefault="YES" />
      <macro name="TIMEOUT" pattern="^[0-9]+(\.[0-9])?$" description="PLC comms timeout" defaultValue="5.0" hasDefault="YES" />
    </macros>
  </config_part>
</ioc_config>
