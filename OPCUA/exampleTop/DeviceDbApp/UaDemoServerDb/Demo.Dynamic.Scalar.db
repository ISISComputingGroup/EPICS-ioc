# Database connecting to the UaServerCpp example server
# that is part of all Unified Automation bundles

# Dynamic part of the Demo server

# records connecting to variables of different types

record(longin, "$(P)$(R)lichar") {
    field(DTYP, "OPCUA")
    field(INP,  "@$(SUBS) ns=2;s=Demo.Dynamic.Scalar.SByte")
    field(SCAN, "I/O Intr")
    field(TSE,  "-2")
    field(TPRO, "$(DEBUG=0)")
}

