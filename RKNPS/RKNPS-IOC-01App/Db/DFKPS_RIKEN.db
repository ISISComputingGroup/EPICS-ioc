# Records copied so that they can be simmed, disabled, etc.
record(bo, "$(P)RESET")
{
    field(DESC, "Reset")
    field(DTYP, "stream")
    field(OUT, "@dfkps_riken.proto reset($(ADR)) $(port) 0")
    field(ZNAM, "Reset")
    field(ONAM, "Reset")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:RESET")
    field(SDIS, "$(P)DISABLE")
}

record(bo, "$(P)POWER:SP")
{
    field(DESC, "Main Power")
    field(DTYP, "stream")
    field(OUT, "@dfkps_riken.proto powersp($(ADR)) $(port) 0")
    field(ZNAM, "Off")
    field(ONAM, "On")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:POWER:SP PP")
    field(SDIS, "$(P)DISABLE")
    field(TPRO, "1")  # Useful for diagnostics leaving in until we know it is working well
}
alias("$(P)POWER:SP", "$(P)POWER:SP:RBV")

record(bo, "$(P)SIM:POWER:SP"){
    field(DTYP, "Soft Channel")
    field(ZNAM, "Off")
    field(ONAM, "On")
}

alias("$(P)SIM:POWER:SP", "$(P)SIM:POWER")

record(bi, "$(P)POWER")
{
    field(DESC, "Main Power")
    field(ZNAM, "Off")
    field(ONAM, "On")

    info(INTEREST, "HIGH")
    info(archive, "VAL")

	field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:POWER")
    field(SDIS, "$(P)DISABLE")
}

alias("$(P)POWER", "$(P)POWER:RBV")


record(ai, "$(P)VRAW")
{
    field(DESC, "ADC Channel 2 - VOLTAGE")
    field(DTYP, "stream")
    field(INP,  "@dfkps_riken.proto adc($(ADR),$(VADC)) $(port) 0")
    field(SCAN, "5 second")
    field(LOLO, "-0.5")
    field(HIHI, "999.5")
    field(LLSV, "MAJOR")
    field(HHSV, "MAJOR")
    field(HOPR, "1000")
    field(LOPR, "0")
    field(PREC, "0")
    field(FLNK, "$(P)VOLT")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:VOLT")
    field(SDIS, "$(P)DISABLE")
    field(EGU, "V")
    info(archive, "VAL")
}


record(ai, "$(P)ADDRESS")
{
    field(DESC, "Address being referenced")
    field(DTYP, "stream")
    field(INP,  "@dfkps_riken.proto adr $(port) 0")
    field(SCAN, "10 second")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:ADDRESS")
    field(SDIS, "$(P)DISABLE")
}

record(ai, "$(P)RA")
{
    field(DESC, "Channel setpoint")
    field(DTYP, "stream")
    field(INP,  "@dfkps_riken.proto ra($(ADR)) $(port) 0")
    field(SCAN, "5 second")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:RA")
    field(SDIS, "$(P)DISABLE")
}

record(calcout, "$(P)VOLT")
{
    field(DESC, "Convert Raw Val to VOLTAGE")
    field(CALC, "A * (B=0?1:-1) * $(FRV)")
    field(INPA, "$(P)VRAW MS")
    field(INPB, "$(P)POL")
    field(EGU, "V")
    field(PREC, "2")
    info(INTEREST, "HIGH")
    info(archive, "VAL")
}

alias("$(P)VOLT", "$(P)VOLT:RBV")

record(ao, "$(P)CURR:SP")
{
    field(PREC, "2")
    field(DESC, "Set Current")
    field(DTYP, "Soft Channel")
    field(OUT, "$(P)CURR:TORAW.A PP MS")
}

record(calcout, "$(P)CURR:TORAW")
{
    field(DESC, "Convert Current to Raw Val")
    field(CALC, "A * $(FWI)")
    field(OUT, "$(P)RAW:SP PP MS")
}

record(bo, "$(P)REMOTE")
{
    field(DESC, "Command Line")
    field(DTYP, "stream")
    field(OUT, "@dfkps_riken.proto cmdsp($(ADR)) $(port) 0")
    field(ZNAM, "Local")
    field(ONAM, "Remote")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:REMOTE")
    field(SDIS, "$(P)DISABLE")
}

record(bo, "$(P)SIM:RESET"){
    field(DTYP, "Soft Channel")
}

record(ao, "$(P)SIM:VOLT"){
    field(DTYP, "Soft Channel")
    field(EGU, "V")
}

record(bo, "$(P)SIM:REMOTE"){
    field(DTYP, "Soft Channel")
}

record(bo, "$(P)SIM") 
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
}

record(bo, "$(P)DISABLE") 
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
    field(VAL, "$(DISABLE=0)")
}

record(calcout, "$(P)CURR")
{
    field(DESC, "Convert Raw Val to Current")
    field(CALC, "A * (B=0?1:-1) * $(FRI)")
    field(INPA, "$(P)RAW MS")
    field(INPB, "$(P)POL")
    field(EGU, "A")
    field(PREC, "2")
    info(INTEREST, "HIGH")
    info(archive, "VAL")
}

alias("$(P)CURR", "$(P)CURR:RBV")

record(ai, "$(P)RAW"){
    field(DESC, "ADC Channel 8")
    field(DTYP, "stream")
    field(INP, "@dfkps_riken.proto adc($(ADR),8) $(port) 0")
    field(SCAN, "5 second")
    field(LOLO, "-999999.5")
    field(HIHI, "99999.5")
    field(LLSV, "MAJOR")
    field(HHSV, "MAJOR")
    field(HOPR, "100000")
    field(LOPR, "0")
    field(PREC, "0")
    field(FLNK, "$(P)CURR")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:RAW")
    field(SDIS, "$(P)DISABLE")
    field(EGU, "A")
    info(archive, "VAL")
}

record(ao, "$(P)RAW:SP")
{
    field(DESC, "Set Output Current")
    field(EGU,  "mA")
    field(DTYP, "stream")
    field(OUT,  "@dfkps_riken.proto dac($(ADR)) $(port) 0")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:RAW:SP")
    field(SDIS, "$(P)DISABLE")
}

record(ao, "$(P)SIM:RAW"){
    field(DTYP, "Soft Channel")
    field(EGU, "A")
}

alias("$(P)SIM:RAW", "$(P)SIM:RAW:SP")
alias("$(P)SIM:RAW", "$(P)SIM:RA")

record(ao, "$(P)SIM:ADDRESS"){
    field(DTYP, "Soft Channel")
}

record(bi, "$(P)POL")
{
    field(DESC, "Polarity")
    field(DTYP, "stream")
    field(INP, "@dfkps_riken.proto getpol($(ADR)) $(port) 0")
    field(ZNAM, "+")
    field(ONAM, "-")
    field(SCAN, "5 second")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:POL")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
    info(archive, "VAL")
}
alias("$(P)POL", "$(P)POL:RBV")

record(bo, "$(P)POL:SP")
{
    field(DESC, "Polarity")
    field(DTYP, "stream")
    field(OUT, "@dfkps_riken.proto setpol($(ADR)) $(port) 0")
    field(ZNAM, "+")
    field(ONAM, "-")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:POL:SP")
}
alias("$(P)POL:SP", "$(P)POL:SP:RBV")

record(bo, "$(P)SIM:POL"){
    field(DTYP, "Soft Channel")
    field(ZNAM, "+")
    field(ONAM, "-")
}
alias("$(P)SIM:POL", "$(P)SIM:POL:SP")

record(bi, "$(P)IS_CALIB") {
    field(VAL, "0")
    field(PINI, "YES")
}

record(bi, "$(P)POL_TYPE") {
    field(VAL, "1")
    field(ZNAM, "UNIPOLAR")
    field(ONAM, "BIPOLAR")
    field(PINI, "YES")
}

record(bo, "$(P)POL:HIDE")
{
	field(DESC, "Show polarity setpoint?")
    field(ZNAM, "No")
    field(ONAM, "Yes")
	field(VAL, "0")
    field(DISP, "1")
	field(PINI, "YES")
}

record(stringin, "$(P)DEV_TYPE")
{
	field(DESC, "Device type for Riken PSU")
	field(VAL, "RKNPS")
	field(PINI, "YES")
}
