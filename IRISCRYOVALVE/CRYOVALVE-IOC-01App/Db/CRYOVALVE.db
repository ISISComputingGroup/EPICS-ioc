################################################################
#
# DB file for IRIS CryoValve
#
################################################################
#
# Activities needed and their associated PVs
# open       Write  Opens the valve                $(P)OPEN
# close      Write  Closes the valve               $(P)CLOSE
# getStatus  Read   Queries the state of the valve $(P)STATUS

record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
}

record(bo, "$(P)DISABLE")
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "0")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

###########################
#### getStatus command ####
###########################

record(stringin, "$(P)STATUS")
{
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP,  "@cryoValve.proto getStatus $(port)")
	field(SIOL, "$(P)SIM:STATUS")
	field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
	info(archive, "VAL")
    field(DESC, "Iris cryo valve status")
}

record(stringout, "$(P)SIM:STATUS")
{
	field(DTYP, "Soft Channel")
	field(VAL, "Simulated")
}

#####################################################
#### Open command ####
#####################################################

record(bo, "$(P)OPEN:CMD") {
    field(DESC, "Solenoid open/close control")
    field(DTYP, "stream")
    field(OUT, "@cryoValve.proto setOpen $(port)")
    field(ZNAM, "CLOSE")
    field(ONAM, "OPEN")
    field(SDIS, "$(P)DISABLE")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:OPEN:CMD")
    info(archive, "VAL")
    info(INTEREST, "HIGH")
}

record(bo, "$(P)SIM:OPEN:CMD")
{
    field(ZNAM, "CLOSE")
    field(ONAM, "OPEN")
}