# Core records (not channel PVs)

record(stringin, "$(P)IDN")
{
    field(DESC, "SCPI identification string")
    field(DTYP, "stream")
    field(INP,  "@devLakeshore_460.proto getIDN $(PORT)")
    field(PINI, "YES")
}

record(mbbi, "$(P)SOURCE")
{
	field(DESC, "Vector magnitude source")
	field(DTYP, "stream")
	field(SCAN, "1 second")
	field(INP,  "@devLakeshore_460.proto getSource $(PORT)")
	field(ONST, "XYZ")
	field(TWST, "XY")
	field(THST, "XZ")
	field(FRST, "YZ")
	field(FVST, "X-Y")
	field(ZRVL, "1")
	field(ONVL, "2")
	field(TWVL, "3")
	field(THVL, "4")
	field(FRVL, "5")
	info(INTEREST, "HIGH")
	info(ARCHIVE, "VAL")
	field(FLNK, "$(P)CHANNEL")
}

record(mbbo, "$(P)SOURCE:SP")
{
	field(DESC, "Set Vector magnitude source")
	field(DTYP, "stream")
	field(OUT,  "@devLakeshore_460.proto setSource $(PORT)")
	field(ONST, "XYZ")
	field(TWST, "XY")
	field(THST, "XZ")
	field(FRST, "YZ")
	field(FVST, "X-Y")
	field(ZRVL, "1")
	field(ONVL, "2")
	field(TWVL, "3")
	field(THVL, "4")
	field(FRVL, "5")
	info(INTEREST, "LOW")
}

record(mbbi, "$(P)CHANNEL")
{
	field(DESC, "Get channel")
	field(DTYP, "stream")
	field(INP,  "@devLakeshore_460.proto getChannel $(PORT)")
	field(ONST, "X")
	field(TWST, "Y")
	field(THST, "Z")
	field(FRST, "V")
}

record(mbbo, "$(P)CHANNEL:SP")
{
	field(DESC, "Set Vector magnitude source")
	field(OUT,  "@devLakeshore_460.proto setChannel $(PORT)")
	field(DTYP, "stream")
	field(ONST, "X")
	field(TWST, "Y")
	field(THST, "Z")
	field(FRST, "V")	
}

