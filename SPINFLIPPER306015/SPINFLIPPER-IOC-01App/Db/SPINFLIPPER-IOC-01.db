record(ai, "$(P)TGUI")
{
    field (DTYP, "stream")
    field(DESC, "The guide temperature")
    field(INP,  "@SPINFLIPPER.proto readGuideTemp $(PORT)")
    field(EGU, "C")
    field(SCAN, "5")
    info(INTEREST, "MEDIUM")
    info(archive, "VAL")
}

