record(bi, "$(P)OUTPUT_STATUS")
{
    field(DTYP, "stream")
    field(INP, "@devagilent3631A.proto read_output_status $(PORT)")
    field(SCAN, ".1 second")
    field(ZNAM, "OFF")
    field(ONAM, "ON") 
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:CURRENT")
    field(SDIS, "$(P)DISABLE")
	field(alarm, "AG3631A")
}

