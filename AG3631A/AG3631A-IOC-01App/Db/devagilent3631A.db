record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
	field(VAL, "$(RECSIM=0)")
	field(PINI, "YES")
}

record(bo, "$(P)DISABLE") 
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

record(stringin, "$(P)$(R)IDN")
{
    field(DESC, "SCPI identification string")
    field(DTYP, "stream")
    field(INP,  "@devagilent3631A.proto getIDN $(PORT)")
    field(PINI, "YES")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:IDN")
    field(SDIS, "$(P)DISABLE")
}

record(ai, "$(P)CURRENT")
{
    field(DTYP, "stream")
    field(INP, "@devagilent3631A.proto read_current $(PORT)")
    field(PREC, "3")
    field(SCAN, ".1 second")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:CURRENT")
    field(SDIS, "$(P)DISABLE")
	field(EGU, "A")
}

record(ao, "$(P)CURRENT:SP")
{
    field(DTYP, "asynInt32")
    field(OUT, "@devagilent3631A.proto write_current $(PORT)")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:CURRENT:SP")
    field(SDIS, "$(P)DISABLE")
	field(EGU, "A")
}

alias("$(P)CURRENT", "$(P)CURRENT:SP:RBV")

