    field(ZNAM, "DISABLED")
    field(ONAM, "ENABLED")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:WATCHDOG:STAT")
    field(SDIS, "$(P)DISABLE")
}
    
record(bo, "$(P)WATCHDOG:STAT:SP")
{
    field(DESC, "Disable the watchdog")
    field(DTYP, "stream")
