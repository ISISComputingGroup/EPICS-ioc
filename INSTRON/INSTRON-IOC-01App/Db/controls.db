    field(ZNAM, "DISABLED")
    field(ONAM, "ENABLED")
    field(SIML, "$(P)SIM")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:WATCHDOG:STAT:SP")
    field(SDIS, "$(P)DISABLE")  
}

record(bi, "$(P)CONTROLMODE")
{
    field(DESC, "Control mode")
    field(DTYP, "stream")
    field(INP,  "@devInstron.proto getControlMode $(PORT)")
    field(SCAN, "Passive")
    field(SIML, "$(P)SIM")
    field(ZNAM, "FRONTPANEL")
    field(ONAM, "COMPUTER")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:CONTROLMODE")
