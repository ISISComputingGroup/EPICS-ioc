record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
	field(PINI, "YES")
}
    
record(bo, "$(P)DISABLE") 
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

record(ai, "$(P)CHANNEL")
{
	field(DESC, "Current control channel")
    field(DTYP, "stream")
    field(EGU, "")
    field(INP,  "@devInstron.proto getCurrentControlChannel $(PORT)")
    field(SCAN, "1 second")
    field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")
}

record(ao, "$(P)CHANNEL:SP")
{
	field(DESC, "Control channel setpoint")
    field(DTYP, "stream")
    field(EGU, "")
    field(OUT,  "@devInstron.proto setCurrentControlChannel $(PORT)")
    field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")
}

record(ai, "$(P)WATCHDOG:ENABLED")
{
	field(DESC, "Current control channel")
    field(DTYP, "stream")
    field(INP,  "@devInstron.proto getWatchdogStatus $(PORT)")
    field(SCAN, "1 second")
    field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")
}

record(ao, "$(P)WATCHDOG:ENABLED:SP")
{
	field(DESC, "Watchdog on/off")
    field(DTYP, "stream")
    field(OUT,  "@devInstron.proto setWatchdogStatus $(PORT)")
    field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")	
}

