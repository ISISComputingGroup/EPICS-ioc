###
### Conversion records
### 

record(calcout, "$(P)POS:TO")
{
    field(INPA, "$(P)POS:RAW")
    field(INPB, "$(P)POS:SCALE")    
    field(CALC, "A*B*1000")
    field(OUT, "$(P)POS PP")
    field(OOPT, "Every Time")
}

record(calcout, "$(P)POS:FROM")
{
    field(INPA, "$(P)POS:SP")
    field(INPB, "$(P)POS:SCALE")  
    field(CALC, "A*(1/B)*(1/1000)")
    field(OUT, "$(P)POS:RAW:SP PP")
    field(OOPT, "Every Time")
}

record(calcout, "$(P)STRESS:TO")
{
    field(INPA, "$(P)STRESS:RAW")
    field(INPB, "$(P)STRESS:SCALE") 
    field(INPC, "$(P)STRESS:AREA")
    field(CALC, "A*B*(1/C)")
    field(OUT, "$(P)STRESS PP")
