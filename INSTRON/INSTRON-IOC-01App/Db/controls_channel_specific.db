record(ai, "$(P)STRESS:AREA")
{
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP, "@devInstron.proto getArea(2) $(PORT)")
    field(PREC, "3")
}

record(ao, "$(P)STRESS:AREA:SP")
{
    field(DTYP, "stream")
    field(OUT, "@devInstron.proto setArea(2) $(PORT)")
    field(PREC, "3")
}

