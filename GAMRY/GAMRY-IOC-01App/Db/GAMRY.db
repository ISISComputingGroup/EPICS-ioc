record(longout, "$(P)CHARGE:SP")
{
    field(DTYP, "stream")
	field(OUT, "@GAMRY.protocol startCharging $(PORT)")
}

# this record is processed when charging is finished, 
record(bi, "$(P)CHARGE:STAT")
{
    field(DTYP, "stream")
    field(SCAN, "I/O Intr")
	field(INP, "@GAMRY.protocol chargingStatus $(PORT)")
	field(ZNAM, "Idle")
	field(ONAM, "Charging")
}

