# P    - PV prefix
# R    - Record Name
# PORT - Asyn port name
# BYTE - Hardware byte to read
# MASK - Mask for this bit

file "$(GALIL)/GalilSup/Db/galil_digital_in_bit.template"
{
pattern {P,      R,          PORT,  BYTE,  MASK      }

# DMC = Digital motor controller
# DMC binary inputs are organized in bytes
	{\$(P):DMC\$(CCP),  Galil0Bi0,  Galil, 0,     0x000001  }
	{\$(P):DMC\$(CCP),  Galil0Bi1,  Galil, 0,     0x000002  }
	{\$(P):DMC\$(CCP),  Galil0Bi2,  Galil, 0,     0x000004  }
	{\$(P):DMC\$(CCP),  Galil0Bi3,  Galil, 0,     0x000008  }
	{\$(P):DMC\$(CCP),  Galil0Bi4,  Galil, 0,     0x000010  }
	{\$(P):DMC\$(CCP),  Galil0Bi5,  Galil, 0,     0x000020  }
	{\$(P):DMC\$(CCP),  Galil0Bi6,  Galil, 0,     0x000040  }
	{\$(P):DMC\$(CCP),  Galil0Bi7,  Galil, 0,     0x000080  }

	{\$(P):DMC\$(CCP),  Galil1Bi0,  Galil, 1,     0x000001  }
	{\$(P):DMC\$(CCP),  Galil1Bi1,  Galil, 1,     0x000002  }
	{\$(P):DMC\$(CCP),  Galil1Bi2,  Galil, 1,     0x000004  }
	{\$(P):DMC\$(CCP),  Galil1Bi3,  Galil, 1,     0x000008  }
	{\$(P):DMC\$(CCP),  Galil1Bi4,  Galil, 1,     0x000010  }
	{\$(P):DMC\$(CCP),  Galil1Bi5,  Galil, 1,     0x000020  }
	{\$(P):DMC\$(CCP),  Galil1Bi6,  Galil, 1,     0x000040  }
	{\$(P):DMC\$(CCP),  Galil1Bi7,  Galil, 1,     0x000080  }

}

# P    - PV prefix
# R    - Record Name
# PORT - Asyn port name
# WORD - Hardware word to read
# MASK - Mask for this bit

file "$(GALIL)/GalilSup/Db/galil_digital_out_bit.template"
{
pattern {P,      R,           PORT,  WORD,  MASK      }

# DMC binary outputs are organized in 16bit words
	{\$(P):DMC\$(CCP),  Galil0Bo0,   Galil, 0,     0x000001  }
	{\$(P):DMC\$(CCP),  Galil0Bo1,   Galil, 0,     0x000002  }
	{\$(P):DMC\$(CCP),  Galil0Bo2,   Galil, 0,     0x000004  }
	{\$(P):DMC\$(CCP),  Galil0Bo3,   Galil, 0,     0x000008  }
	{\$(P):DMC\$(CCP),  Galil0Bo4,   Galil, 0,     0x000010  }
	{\$(P):DMC\$(CCP),  Galil0Bo5,   Galil, 0,     0x000020  }
	{\$(P):DMC\$(CCP),  Galil0Bo6,   Galil, 0,     0x000040  }
	{\$(P):DMC\$(CCP),  Galil0Bo7,   Galil, 0,     0x000080  }
	{\$(P):DMC\$(CCP),  Galil0Bo8,   Galil, 0,     0x000100  }
	{\$(P):DMC\$(CCP),  Galil0Bo9,   Galil, 0,     0x000200  }
	{\$(P):DMC\$(CCP),  Galil0Bo10,  Galil, 0,     0x000400  }
	{\$(P):DMC\$(CCP),  Galil0Bo11,  Galil, 0,     0x000800  }
	{\$(P):DMC\$(CCP),  Galil0Bo12,  Galil, 0,     0x001000  }
	{\$(P):DMC\$(CCP),  Galil0Bo13,  Galil, 0,     0x002000  }
	{\$(P):DMC\$(CCP),  Galil0Bo14,  Galil, 0,     0x004000  }
	{\$(P):DMC\$(CCP),  Galil0Bo15,  Galil, 0,     0x008000  }

	{\$(P):DMC\$(CCP),  Galil1Bo0,   Galil, 1,     0x000001  }
	{\$(P):DMC\$(CCP),  Galil1Bo1,   Galil, 1,     0x000002  }
	{\$(P):DMC\$(CCP),  Galil1Bo2,   Galil, 1,     0x000004  }
	{\$(P):DMC\$(CCP),  Galil1Bo3,   Galil, 1,     0x000008  }
	{\$(P):DMC\$(CCP),  Galil1Bo4,   Galil, 1,     0x000010  }
	{\$(P):DMC\$(CCP),  Galil1Bo5,   Galil, 1,     0x000020  }
	{\$(P):DMC\$(CCP),  Galil1Bo6,   Galil, 1,     0x000040  }
	{\$(P):DMC\$(CCP),  Galil1Bo7,   Galil, 1,     0x000080  }
	{\$(P):DMC\$(CCP),  Galil1Bo8,   Galil, 1,     0x000100  }
	{\$(P):DMC\$(CCP),  Galil1Bo9,   Galil, 1,     0x000200  }
	{\$(P):DMC\$(CCP),  Galil1Bo10,  Galil, 1,     0x000400  }
	{\$(P):DMC\$(CCP),  Galil1Bo11,  Galil, 1,     0x000800  }
	{\$(P):DMC\$(CCP),  Galil1Bo12,  Galil, 1,     0x001000  }
	{\$(P):DMC\$(CCP),  Galil1Bo13,  Galil, 1,     0x002000  }
	{\$(P):DMC\$(CCP),  Galil1Bo14,  Galil, 1,     0x004000  }
	{\$(P):DMC\$(CCP),  Galil1Bo15,  Galil, 1,     0x008000  }

	{\$(P):DMC\$(CCP),  Galil2Bo0,   Galil, 2,     0x000001  }
	{\$(P):DMC\$(CCP),  Galil2Bo1,   Galil, 2,     0x000002  }
	{\$(P):DMC\$(CCP),  Galil2Bo2,   Galil, 2,     0x000004  }
	{\$(P):DMC\$(CCP),  Galil2Bo3,   Galil, 2,     0x000008  }
	{\$(P):DMC\$(CCP),  Galil2Bo4,   Galil, 2,     0x000010  }
	{\$(P):DMC\$(CCP),  Galil2Bo5,   Galil, 2,     0x000020  }
	{\$(P):DMC\$(CCP),  Galil2Bo6,   Galil, 2,     0x000040  }
	{\$(P):DMC\$(CCP),  Galil2Bo7,   Galil, 2,     0x000080  }
	{\$(P):DMC\$(CCP),  Galil2Bo8,   Galil, 2,     0x000100  }
	{\$(P):DMC\$(CCP),  Galil2Bo9,   Galil, 2,     0x000200  }
	{\$(P):DMC\$(CCP),  Galil2Bo10,  Galil, 2,     0x000400  }
	{\$(P):DMC\$(CCP),  Galil2Bo11,  Galil, 2,     0x000800  }
	{\$(P):DMC\$(CCP),  Galil2Bo12,  Galil, 2,     0x001000  }
	{\$(P):DMC\$(CCP),  Galil2Bo13,  Galil, 2,     0x002000  }
	{\$(P):DMC\$(CCP),  Galil2Bo14,  Galil, 2,     0x004000  }
	{\$(P):DMC\$(CCP),  Galil2Bo15,  Galil, 2,     0x008000  } 

	{\$(P):DMC\$(CCP),  Galil3Bo0,   Galil, 3,     0x000001  }
