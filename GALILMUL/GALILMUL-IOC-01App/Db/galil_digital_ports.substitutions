	{\$(P):DMC\$(CCP),  Galil3Bo3,   Galil, 3,     0x000008  }
	{\$(P):DMC\$(CCP),  Galil3Bo4,   Galil, 3,     0x000010  }
	{\$(P):DMC\$(CCP),  Galil3Bo5,   Galil, 3,     0x000020  }
	{\$(P):DMC\$(CCP),  Galil3Bo6,   Galil, 3,     0x000040  }
	{\$(P):DMC\$(CCP),  Galil3Bo7,   Galil, 3,     0x000080  }
	{\$(P):DMC\$(CCP),  Galil3Bo8,   Galil, 3,     0x000100  }
	{\$(P):DMC\$(CCP),  Galil3Bo9,   Galil, 3,     0x000200  }
	{\$(P):DMC\$(CCP),  Galil3Bo10,  Galil, 3,     0x000400  }
	{\$(P):DMC\$(CCP),  Galil3Bo11,  Galil, 3,     0x000800  }
	{\$(P):DMC\$(CCP),  Galil3Bo12,  Galil, 3,     0x001000  }
	{\$(P):DMC\$(CCP),  Galil3Bo13,  Galil, 3,     0x002000  }
