#######################################################
#
# DB file for Keithley 2400 Source Meter
#
#######################################################

record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
}

record(bo, "$(P)DISABLE")
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

######################################
#### Current, Voltage, Resistance ####
######################################

#Fanout reads so that they can be interrupted

record(fanout, "$(P)READ") {
	field(SCAN, "1 second")
	field(LNK1, "$(P)V PP")
	field(LNK2, "$(P)I PP")
	field(LNK3, "$(P)R PP")
	field(SELM, "All")
}

record(ao, "$(P)I")
{
    field(DESC, "Current")
    field(DTYP, "stream")
    field(EGU, "A")
	field(PREC, "2")
    field(OUT, "@Keithley2400.proto getI $(PORT)")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:I")
    field(SDIS, "$(P)DISABLE")
    info(archive, "VAL")
    info(INTEREST, "HIGH")
}

record(ao, "$(P)SIM:I")
{
}

record(ao, "$(P)V")
{
    field(DESC, "Voltage")
    field(DTYP, "stream")
    field(EGU, "V")
	field(PREC, "2")
    field(OUT, "@Keithley2400.proto getV $(PORT)")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:V")
    field(SDIS, "$(P)DISABLE")
    info(archive, "VAL")
    info(INTEREST, "HIGH")
}

record(ao, "$(P)SIM:V")
{
}

record(ao, "$(P)R")
{
    field(DESC, "Resistance")
    field(DTYP, "stream")
    field(EGU, "Ohm")
	field(PREC, "2")
    field(OUT, "@Keithley2400.proto getR $(PORT)")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:R")
    field(SDIS, "$(P)DISABLE")
    info(archive, "VAL")
    info(INTEREST, "HIGH")
}

record(ao, "$(P)SIM:R")
{
}

#######################
#### General input ####
#######################

record(stringout, "$(P)GEN:SP")
{
	field(DESC, "General input command")
	field(FLNK, "$(P)GEN PP")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:GEN")
    field(SDIS, "$(P)DISABLE")
    info(archive, "VAL")
    info(INTEREST, "HIGH")
}

record(stringin, "$(P)GEN")
{
    field(DESC, "General input command response")
    field(DTYP, "stream")
    field(INP, "@Keithley2400.proto gen($(P)GEN:SP) $(PORT)")
    field(SCAN, "Passive")
    field(SIOL, "$(P)SIM:GEN")
    field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")
    info(archive, "VAL")
    info(INTEREST, "HIGH")
}

record(stringout, "$(P)SIM:GEN")
{
}

alias("$(P)GEN", "$(P)GEN:SP:RBV")
alias("$(P)SIM:GEN", "$(P)SIM:GEN:SP")
alias("$(P)SIM:GEN", "$(P)SIM:GEN:SP:RBV")

###############
#### Reset ####
###############

record(ao, "$(P)RESET")
{
    field(DESC, "Reset the device")
    field(DTYP, "stream")
    field(OUT, "@Keithley2400.proto setRST $(PORT)")
    field(SDIS, "$(P)DISABLE")
}

#####################
#### Output mode ####
#####################

record(bo, "$(P)OUTPUT:MODE:SP") {
    field(DESC, "Set output mode on/off")
    field(DTYP, "stream")
    field(OUT, "@Keithley2400.proto setOUTP $(PORT)")
    field(ZNAM, "OFF")
    field(ONAM, "ON")
	field(VAL, "1")
	field(PINI, "YES")
    field(SDIS, "$(P)DISABLE")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:OUTPUT:MODE:SP")
    info(archive, "VAL")
    info(INTEREST, "HIGH")
}

record(bo, "$(P)OUTPUT:MODE") {
    field(DESC, "Output mode on/off")
    field(DTYP, "stream")
	field(SCAN, ".5 second")
    field(OUT, "@Keithley2400.proto getOUTP $(PORT)")
    field(ZNAM, "OFF")
    field(ONAM, "ON")
    field(SDIS, "$(P)DISABLE")
    info(archive, "VAL")
    info(INTEREST, "HIGH")
}

record(bo, "$(P)SIM:OUTPUT:MODE:SP")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "Off")
    field(ONAM, "On")
}

alias("$(P)OUTPUT:MODE", "$(P)OUTPUT:MODE:SP:RBV")
alias("$(P)OUTPUT:MODE:SP", "$(P)SIM:OUTPUT:MODE")
alias("$(P)OUTPUT:MODE", "$(P)SIM:OUTPUT:MODE:SP:RBV")
alias("$(P)OUTPUT:MODE:SP", "$(P)SIM:OUTPUT:MODE")


