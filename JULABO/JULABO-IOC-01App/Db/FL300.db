record(bo, "$(P)SIM")
{
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(FLNK, "$(P)VERSION")
    field(VAL, "$(RECSIM=0)")
}

record(bo, "$(P)DISABLE") 
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
    field(VAL, "$(DISABLE=0)")
}

record(stringin, "$(P)VERSION")
{
    field(DTYP, "stream")
    field(INP,  "@julaboCommon.proto getVersion $(PORT)")
    field(PINI, "YES")
	field(SIML, "$(P)SIM")
	field(SIOL, "$(P)SIM:VERSION")
    field(SDIS, "$(P)DISABLE")
}

record(stringin, "$(P)STATUS")
{
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP,  "@julaboCommon.proto getStatus $(PORT)")
	field(SIML, "$(P)SIM")
	field(SIOL, "$(P)SIM:STATUS")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
    field(DESC, "Julabo status")
}

record(ai, "$(P)TEMP:SP:RBV") 
{
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP,  "@julaboCommon.proto readSetTemp $(PORT)")
    field(PREC, "1")
    field(EGU,  "C")
	field(SIML, "$(P)SIM")
	field(SIOL, "$(P)SIM:TEMP:SP:RBV")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
    field(DESC, "Temperature setpoint readback")
}

record(ai, "$(P)TEMP") 
{
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP,  "@julaboCommon.proto readInternalTemp $(PORT)")
    field(PREC, "1")
    field(EGU,  "C")
	field(SIML, "$(P)SIM")
	field(SIOL, "$(P)SIM:TEMP")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
    field(DESC, "Temperature readback")
}

record(ao, "$(P)TEMP:SP") 
{
    field(SCAN, "Passive")
    field(DTYP, "stream")
    field(OUT,  "@julaboCommon.proto writeTemp $(PORT)")
    field(EGU, "C")
    field(PREC, "1")
	field(SIML, "$(P)SIM")
	field(SIOL, "$(P)SIM:TEMP:SP")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
    field(DESC, "Temperature setpoint")
}

record(bi, "$(P)MODE") 
{
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP,  "@julaboCommon.proto readRunMode $(PORT)")
    field(ZNAM, "OFF")
    field(ONAM, "ON")
	field(SIML, "$(P)SIM")
	field(SIOL, "$(P)SIM:MODE")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
    field(DESC, "Julabo mode")
}

record(bo, "$(P)MODE:SP") 
{
    field(SCAN, "Passive")
    field(DTYP, "stream")
    field(OUT,  "@julaboCommon.proto setRunMode $(PORT)")
    field(ZNAM, "OFF")
    field(ONAM, "ON")
	field(SIML, "$(P)SIM")
	field(SIOL, "$(P)SIM:MODE:SP")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
    field(DESC, "Julabo mode setpoint")
}

alias("$(P)MODE","$(P)MODE:SP:RBV")

