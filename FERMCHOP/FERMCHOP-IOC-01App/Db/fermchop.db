record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
    field(PINI, "YES")
}
    
record(bo, "$(P)DISABLE") 
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

record(stringin, "$(P)THING:RAW")
{
    field(DTYP, "stream")
    field(INP,  "@devfc.proto getStatus $(PORT)")
    field(SCAN, "1 second")
	field(FLNK, "$(P)THING:PARSE")
}

record(aSub, "$(P)THING:PARSE")
{
  field(SNAM, "fermichopper")
  field(INPA, "$(P)THING:RAW")
  field(FTA, "STRING")
  field(NOA, "1")
  field(OUTA, "$(P)THING")
  field(FTVA, "STRING")
  field(NOVA, "1")
}

record(stringin, "$(P)THING")
{
    field(SCAN, "Passive")
} 

record(stringout, "$(P)SENDTHING")
{
    field(DTYP, "stream")
    field(OUT,  "@devfc.proto sendThing $(PORT)")
}