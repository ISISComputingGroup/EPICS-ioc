record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
    field(PINI, "YES")
}
    
record(bo, "$(P)DISABLE") 
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

record(ai, "$(P)THING")
{
    field(DTYP, "stream")
    field(INP,  "@devfc.proto getStatus $(PORT)")
    field(SCAN, "1 second")
}

record(ai, "$(P)SENDTHING")
{
    field(DTYP, "stream")
    field(INP,  "@devfc.proto sendThing $(PORT)")
	field(SCAN, "1 second")
}