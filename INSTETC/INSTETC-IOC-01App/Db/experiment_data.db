record(waveform, "$(P)ED:USERNAME:DAE:SP")
{
    field(DESC, "Set Experiment User names")
	field(DTYP, "Soft Channel")
	field(SCAN, "Passive")
    field(NELM, "1024")
    field(FTVL, "CHAR")
	field(FLNK, "$(P)ED:USERNAME:TODAE")
    info(autosaveFields, "VAL")
	field(SDIS, "$(P)ED:DISABLE")
}

record(aSub, "$(P)ED:USERNAME:TODAE")
{
	field(INPA, "$(P)ED:USERNAME:DAE:SP")
	field(OUTA, "$(P)DAE:_USERNAME:SP")
	field(FTA, "CHAR")
	field(FTVA, "CHAR")
	field(NOA, "1024")
	field(NOVA, "1024")
	field(SNAM, "copyArgA")
}

alias("$(P)ED:USERNAME", "$(P)ED:USERNAME:SP:RBV")

record(waveform, "$(P)ED:SIM:USERNAME")
{
    field(DESC, "Simulated Experiment User Name")
    field(NELM, "1024")
    field(FTVL, "CHAR")
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
	field(FLNK, "$(P)ED:USERNAME PP")
}
