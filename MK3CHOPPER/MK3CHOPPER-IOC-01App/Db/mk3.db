record(ai, "$(P)FREQ")
{
    field(DESC, "The actual frequency")
    field(DTYP, "asynFloat64")
    field(INP,  "@asyn(mk3,0,0)FREQ")
    field(SCAN, "1 second")
	field(EGU, "Hz")
    info(INTEREST, "HIGH")
    field(SIML, "$(P)SIM")
	field(SIOL, "$(P)SIM:FREQ")
    field(SDIS, "$(P)DISABLE")
}

record(ao, "$(P)FREQ:SP")
{
    field(DESC, "Sets the nominal frequency")
    field(DTYP, "asynFloat64")
    field(OUT,  "@asyn(mk3,0,0)NOMFREQ")
	field(EGU, "Hz")
    field(SIML, "$(P)SIM")
	field(SIOL, "$(P)SIM:FREQ:SP")
    field(SDIS, "$(P)DISABLE")
}

