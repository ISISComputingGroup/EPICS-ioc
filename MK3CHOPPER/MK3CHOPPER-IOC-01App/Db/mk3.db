record(ai, "$(P)CHANNELS")
{
    field(DESC, "Number of channels")
    field(DTYP, "asynInt32")
    field(INP,  "@asyn(mk3,0,0)CHANNELS")
    field(SCAN, "10 second")
    info(INTEREST, "MEDIUM")
}

record(ai, "$(P)FREQ")
{
    field(DESC, "The actual frequency")
    field(DTYP, "asynFloat64")
    field(INP,  "@asyn(mk3,0,0)FREQ")
    field(SCAN, "1 second")
	field(EGU, "Hz")
    info(INTEREST, "HIGH")
}

record(ao, "$(P)FREQ:SP")
{
    field(DESC, "Sets the nominal frequency")
    field(DTYP, "asynFloat64")
    field(OUT,  "@asyn(mk3,0,0)NOMFREQ")
	field(EGU, "Hz")
}

