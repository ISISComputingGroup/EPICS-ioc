### Generic Records

record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM)")
    info("testparam","testvalue")
}

record(bo, "$(P)DISABLE") 
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "0")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

### Operation Mode

record(mbbo, "$(P)OPMODE:SP") {
  field(DESC, "Operation Mode")
  field(DTYP, "Soft Channel")
  field(SCAN, "1 second")
  
  field(ZRST, "Idle")
  field(ONST, "High Field")
  field(TWST, "Low Field")
  field(THST, "Z Switching")
  
  field(SIML, "$(P)SIM")
  field(SIOL, "$(P)SIM:OPMODE")
  field(SDIS, "$(P)DISABLE")
}

record(mbbi, "$(P)OPMODE") {
  field(DESC, "Operation Mode")
  field(DTYP, "Soft Channel")
  field(SCAN, "1 second")
  
  field(ZRST, "Idle")
  field(ONST, "High Field")
  field(TWST, "Low Field")
  field(THST, "Z Switching")
  
  field(SIML, "$(P)SIM")
  field(SIOL, "$(P)SIM:OPMODE")
  field(SDIS, "$(P)DISABLE")
}
alias("$(P)OPMODE", "$(P)OPMODE:RBV")

record(mbbi, "$(P)SIM:OPMODE") {
  field(DESC, "Simulated Operation Mode")
  field(DTYP, "Soft Channel")
  
  field(ZRST, "Idle")
  field(ONST, "High Field")
  field(TWST, "Low Field")
  field(THST, "Z Switching")
}

### Hall Sensors

record(ai, "$(P)HALL:SENS1") {
  field(DESC, "Hall Probe reading in X")
  field(DTYP, "Soft Channel")
  field(SCAN, "1 second")
  field(EGU, "Gauss")
  
  field(INP,"$(GM_IOC):X:FIELD:GAUSS")
  
  field(SIML, "$(P)SIM")
  field(SIOL, "$(P)SIM:HALL:SENS1")
  field(SDIS, "$(P)DISABLE")
}

alias("$(P)HALL:SENS1","$(P)HALL:SENS1:RBV")

record(ai, "$(P)SIM:HALL:SENS1") {
  field(DESC, "Simulated Hall Probe reading in X")
  field(DTYP, "Soft Channel")
  field(EGU,"Gauss")
}

