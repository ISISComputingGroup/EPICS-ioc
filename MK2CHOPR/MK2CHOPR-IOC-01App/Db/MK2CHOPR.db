#######################################################
#
# DB file for ISIS MK2 Chopper
#
#######################################################

record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
}

record(bo, "$(P)DISABLE")
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "0")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

record(ai, "$(P)FREQ:SP")
{
    field(DESC, "Demanded frequency")
    field(DTYP, "stream")
	field(SCAN, "Passive")
    field(EGU, "Hz")
	field(PREC, "2")
    field(INP, "@devmk2chopr.proto get_demanded_frequency $(PORT)")
}