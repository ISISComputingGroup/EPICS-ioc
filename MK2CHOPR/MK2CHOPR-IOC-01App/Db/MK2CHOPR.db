#######################################################
# Start/stop
#######################################################

record(bo, "$(P)ON")
{
    field(DESC, "Starts (1) or stops (2) the device")
    field(DTYP, "stream")
    field(OUT,  "@mk2chopper.proto setChopperStarted $(PORT)")
	field(EGU, "")
    field(SIML, "$(P)SIM")
}

alias("$(P)START","$(P)START:SP")
alias("$(P)START","$(P)START:SP:RBV")
