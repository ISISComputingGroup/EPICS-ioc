record(mbbi, "$(P)$(ERR)SIM:_LOWER")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
}

record(mbbi, "$(P)$(ERR)SIM:_UPPER")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(FTVL, "44")
}

