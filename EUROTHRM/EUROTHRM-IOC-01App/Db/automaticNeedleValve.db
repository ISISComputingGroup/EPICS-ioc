record(ai, "$(P)FLOW")
{
    field(DESC, "'Flow' flow readback from transducer")
    field(DTYP, "asynFloat64")
	field(INP, "@asyn(MODBUS_RX_$(GAD)$(LAD),1025,1000)MODBUS_DATA")
	field(EGU,  "L/min")
    info(INTEREST, "MEDIUM")
    info(archive, "VAL")
}

