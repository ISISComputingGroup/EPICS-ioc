    field(SXVL, "6")
    field(SXST, "Samp vol: fill iterations")
    field(SXSV, "MAJOR")
    
    field(SVVL, "7")
    field(SVST, "Samp vol: fill timeout")
    field(SVSV, "MAJOR")
    
    field(EIVL, "8")
    field(EIST, "Buff or samp vol leak")
    field(EISV, "MAJOR")
    
    field(NIVL, "9")
    field(NIST, "Shot didn't raise press.")
    field(NISV, "MAJOR")
    
    field(TEVL, "10")
