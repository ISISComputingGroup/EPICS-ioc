<?xml version="1.0" ?>
<ioc_config xmlns:xi="http://www.w3.org/2001/XInclude">
 <config_part>
  <ioc_desc>ISIS Muon Zero Field Controller</ioc_desc>
    <macros>
    <macro name="MAGNETOMETER" pattern="^[0-9a-zA-Z:\._]+$" description="Magnetometer PV prefix, e.g. IN:INSTNAME:ZFMAGFLD_01" hasDefault="NO" />

    <macro name="PSU_X" pattern="^[0-9a-zA-Z:\._]+$" description="X axis power supply prefix, e.g. IN:INSTNAME:CRYOSMS_01" hasDefault="NO" />
    <macro name="PSU_Y" pattern="^[0-9a-zA-Z:\._]+$" description="Y axis power supply prefix, e.g. IN:INSTNAME:CRYOSMS_01" hasDefault="NO" />
    <macro name="PSU_Z" pattern="^[0-9a-zA-Z:\._]+$" description="Z axis power supply prefix, e.g. IN:INSTNAME:CRYOSMS_01" hasDefault="NO" />
	
    <macro name="MAGNETOMETER_X1" pattern="^[0-9a-zA-Z:\._]+$" description="X1 magnetometer prefix, e.g. IN:INSTNAME:G3HALLPR_01:0" hasDefault="NO" />
    <macro name="MAGNETOMETER_X2" pattern="^[0-9a-zA-Z:\._]+$" description="X2 magnetometer prefix, e.g. IN:INSTNAME:G3HALLPR_01:0" hasDefault="NO" />
    <macro name="MAGNETOMETER_Y1" pattern="^[0-9a-zA-Z:\._]+$" description="Y1 magnetometer prefix, e.g. IN:INSTNAME:G3HALLPR_01:0" hasDefault="NO" />
    <macro name="MAGNETOMETER_Y2" pattern="^[0-9a-zA-Z:\._]+$" description="Y2 magnetometer prefix, e.g. IN:INSTNAME:G3HALLPR_01:0" hasDefault="NO" />
    <macro name="MAGNETOMETER_Z1" pattern="^[0-9a-zA-Z:\._]+$" description="Z1 magnetometer prefix, e.g. IN:INSTNAME:G3HALLPR_01:0" hasDefault="NO" />
    <macro name="MAGNETOMETER_Z2" pattern="^[0-9a-zA-Z:\._]+$" description="Z2 magnetometer prefix, e.g. IN:INSTNAME:G3HALLPR_01:0" hasDefault="NO" />
    
    <macro name="PSU_X_MIN" pattern="^-?[0-9]+\.?[0-9]*$" description="Min field to write on X power supply" hasDefault="YES" defaultValue="0" />
    <macro name="PSU_X_MAX" pattern="^-?[0-9]+\.?[0-9]*$" description="Max field to write on X power supply" hasDefault="YES" defaultValue="0" />

    <macro name="PSU_Y_MIN" pattern="^-?[0-9]+\.?[0-9]*$" description="Min field to write on Y power supply" hasDefault="YES" defaultValue="0" />
    <macro name="PSU_Y_MAX" pattern="^-?[0-9]+\.?[0-9]*$" description="Max field to write on Y power supply" hasDefault="YES" defaultValue="0" />

    <macro name="PSU_Z_MIN" pattern="^-?[0-9]+\.?[0-9]*$" description="Min field to write on Z power supply" hasDefault="YES" defaultValue="0" />
    <macro name="PSU_Z_MAX" pattern="^-?[0-9]+\.?[0-9]*$" description="Max field to write on X power supply" hasDefault="YES" defaultValue="0" />

    <macro name="FEEDBACK" pattern="^-?[0-9]+\.?[0-9]*$" description="Feedback factor" hasDefault="YES" defaultValue="0" />
  </macros>
 </config_part>
</ioc_config>
