record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
	field(PINI, "YES")
    field(FLNK, "$(P)VERSION")
}

record(bo, "$(P)DISABLE") 
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

record(ai, "$(P)NUM_ENABLED")
{
    field(DESC, "Number of channels")
    field(DTYP, "asynInt32")
    field(INP,  "@asyn($(PORT),$(CHANNEL),0)CHANNELS")
    field(SCAN, "10 second")
    field(SDIS, "$(P)DISABLE")
	field(EGU, "")
    info(INTEREST, "MEDIUM")
}

record(ai, "$(P)$(Q)FREQ")
{
    field(DESC, "The actual frequency")
    field(DTYP, "asynFloat64")
    field(INP,  "@asyn($(PORT),$(CHANNEL),0)FREQ")
    field(SCAN, "1 second")
	field(EGU, "Hz")
    info(INTEREST, "HIGH")
    field(SIML, "$(P)SIM")
	field(SIOL, "$(P)$(Q)SIM:FREQ")
    field(SDIS, "$(P)DISABLE")
}

record(ao, "$(P)$(Q)FREQ:SP")
{
    field(DESC, "Sets the nominal frequency")
    field(DTYP, "asynFloat64")
    field(OUT,  "@asyn($(PORT),$(CHANNEL),0)NOMFREQ")
	field(EGU, "Hz")
    field(SIML, "$(P)SIM")
