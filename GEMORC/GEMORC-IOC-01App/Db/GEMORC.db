record(ao, "$(P)RESET") {
	field(DESC, "Restore default settings")
	field(FLNK, "$(P)RESET:ACTION")
}

record(seq, "$(P)RESET:ACTION") {
	field(DESC, "Restore default settings")

    field(LNK1, "$(P)WIDTH:SP PP")
    field(DO1, "100")
	
    field(LNK2, "$(P)OFFSET:SP PP")
	field(DLY2, "0.1")
    field(DO2, "0")
	
    field(LNK3, "$(P)SPEED:SP PP")
	field(DLY3, "0.2")
    field(DO3, "20")
	
    field(LNK4, "$(P)ACC:SP PP")
	field(DLY4, "0.3")
    field(DO4, "500")
	
    field(SELM, "All")
}

# Derived values

record(calc, "$(P)WIDTH:ACC") {
	field(DESC, "Acceleration width")
	
	field(INPA, "$(P)SPEED")
	field(INPB, "$(P)ACC")
	field(CALC, "B!=0?A/B:0")
	
	field(FLNK, "$(P)WIDTH:TOTAL")
}

record(calc, "$(P)WIDTH:TOTAL") {
	field(DESC, "Total window width")
	
	field(INPA, "$(P)WIDTH")
	field(INPB, "$(P)WIDTH:ACC")
	
	field(CALC, "2*B+A")
	
	field(FLNK, "$(P)UTILITY")
}

record(calcout, "$(P)UTILITY") {
	field(DESC, "Utility time")
	
	field(INPA, "$(P)WIDTH")
	field(INPB, "$(P)WIDTH:TOTAL")
	field(INPC, "$(P)ACC")
	
	field(CALC, "C!=0?B!=0?A/B:0:0")
}

