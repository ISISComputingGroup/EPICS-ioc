record(ao, "$(P)RESET") {
	field(DESC, "Restore default settings")
	field(FLNK, "$(P)RESET:ACTION")
}

record(seq, "$(P)RESET:ACTION") {
	field(DESC, "Restore default settings")

    field(LNK1, "$(P)WIDTH:SP PP")
    field(DO1, "100")
	
    field(LNK2, "$(P)OFFSET:SP PP")
	field(DLY2, "0.1")
    field(DO2, "0")
	
    field(LNK3, "$(P)SPEED:SP PP")
	field(DLY3, "0.2")
    field(DO3, "20")
	
    field(LNK4, "$(P)ACC:SP PP")
	field(DLY4, "0.3")
    field(DO4, "500")
	
    field(LNK5, "$(P)INIT:AUTO PP")
	field(DLY5, "0.4")
    field(DO5, "20000")
	
    field(LNK6, "$(P)INIT:OPT PP")
	field(DLY6, "0.5")
    field(DO6, "10000")
	
    field(SELM, "All")
}

# Derived values

record(calcout, "$(P)UTILITY") {
	field(DESC, "Utility time")
	
	field(INPA, "$(P)WIDTH")
	field(INPB, "$(P)BACKLASH")
	
	field(CALC, "100*A/(A+2*B)")
	
	field(EGU, "")    
	field(FLNK, "$(P)PERIOD")
    info(INTEREST, "HIGH")
    info(archive, "VAL")
}

record(calc, "$(P)PERIOD") {
	
	field(INPA, "$(P)SPEED")
	field(INPB, "$(P)WIDTH")
	field(INPC, "$(P)BACKLASH")
	field(CALC, "(B+2*C)/A")
	
	field(EGU, "s")    
	field(FLNK, "$(P)FREQ")
    info(INTEREST, "HIGH")
    info(archive, "VAL")
}

record(calc, "$(P)FREQ") {
	field(EGU, "Hz")
    field(INPA, "$(P)PERIOD")
	field(CALC, "1/A")	
    info(INTEREST, "HIGH")
    info(archive, "VAL")	
}

